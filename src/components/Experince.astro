---
interface Props {
  title: string;
  company: string;
  timeline: string;
  items: string[];
}

const { title, company, timeline, items } = Astro.props;
---

<div class="relative border-l border-black dark:border-white pl-8 ml-1.5">
  <div
    class="absolute -left-1.5 h-2.5 w-2.5 rounded-full border border-black dark:border-white bg-black dark:bg-white"
  >
  </div>
  <h3 class="text-xl text-primary">{title}</h3>
  <h4 class="text-secondary">{company} â€¢ {timeline}</h4>
  <ul class="mt-3 list-disc space-y-1 pl-6">
    {
      items.map((item) => {
        return <li class="text-muted">{item}</li>;
      })
    }
  </ul>
</div>
