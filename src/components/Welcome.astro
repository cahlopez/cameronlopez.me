---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import Noise from './Noise.astro';
---

<div id="container" class="h-full">
	<img id="background" class="blur-[90px] fixed top-0 left-0 w-full h-full -z-1" src={background.src} alt="" fetchpriority="high" />
	<div class="fixed top-0 left-0 w-full h-full"></div>
	<Noise className="fixed top-0 left-0 w-full h-full"/>
	<main class="h-full flex w-1/2 justify-center">
		<section id="hero" class="flex items-start flex-col justify-center">
			<h1 class="text-2xl">Cameron Lopez</h1>
		</section>
	</main>
</div>