---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div class="flex">
  <h3 class="text-xl">{title}</h3>
  <ul class="flex flex-row space-x-1 pl-3 items-center">
    {
      items.map((item, index) => {
        return <li>{index < items.length - 1 ? item + "," : item}</li>;
      })
    }
  </ul>
</div>
